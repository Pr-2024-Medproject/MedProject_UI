<Window x:Class="MedProject_UI.View.Pages.DoctorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedProject_UI.View.Pages"
        mc:Ignorable="d"
        Title="DoctorsWindow" Height="450" Width="1000"
        Loaded="Window_Loaded">
    <Grid>
        <DockPanel Background="White">
            <!-- Основна частина -->
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"/>
                    <!-- 20% -->
                    <RowDefinition Height="8*"/>
                    <!-- 80% -->
                </Grid.RowDefinitions>

                <!-- Пошук і фільтр -->
                <Grid
                    Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" VerticalAlignment="Center" Margin="0,0,0,3">
                        <Button x:Name="btnBack"
                                Content="←"
                                ToolTip="Назад"
                                Width="35"
                                Height="35"
                                FontSize="20"
                                FontWeight="Bold"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Cursor="Hand"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Click="btnBack_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Foreground" Value="#0d6efd"/>
                                    <!-- Синій як у Bootstrap -->
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#0a58ca"/>
                                            <!-- Темніший синій -->
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Foreground" Value="#084298"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock 
                            x:Name="Label_Cat2" 
                            HorizontalAlignment="Center" VerticalAlignment="Center" 
                            TextWrapping="Wrap" Text="Список пацієнтів"  
                            FontSize="24" FontFamily="Roboto" 
                            Margin="0,0,0,0">
                            <TextBlock.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF56B1A9" Offset="1"/>
                                    <GradientStop Color="Transparent" Offset="0.667"/>
                                </LinearGradientBrush>
                            </TextBlock.Background>
                        </TextBlock>
                    </StackPanel>
                    <Grid Height="40"
                          Grid.Column="1" Margin="10,0,10,0">
                        <!-- Основне поле вводу -->
                        <TextBox x:Name="tbSearch"
                                 VerticalAlignment="Center"
                                 FontSize="16"
                                 Padding="10,5,35,5"
                                 Background="#fff"
                                 BorderBrush="#ced4da"
                                 BorderThickness="1"
                                 FontFamily="Roboto"
                                 Foreground="Black"
                                 HorizontalContentAlignment="Left"
                                 VerticalContentAlignment="Center"
                                 TextChanged="tbSearch_TextChanged"
                                 GotFocus="tbSearch_GotFocus"
                                 LostFocus="tbSearch_LostFocus"
                        />

                        <!-- Placeholder текст -->
                        <TextBlock x:Name="tbSearchPlaceholder"
                                   Text="Введіть ім’я лікаря..."
                                   FontSize="16"
                                   Foreground="#888"
                                   Padding="10,5,35,5"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center"
                                   Margin="2,0,0,0"
                                   Visibility="Visible" />

                        <!-- Хрестик -->
                        <Button x:Name="btnClearSearch"
                                Content="✖"
                                Width="20"
                                Height="20"
                                FontSize="12"
                                Background="Transparent"
                                BorderBrush="{x:Null}"
                                Foreground="Gray"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                Visibility="Collapsed"
                                Cursor="Hand"
                                Click="btnClearSearch_Click"/>
                    </Grid>
                    <ToggleButton x:Name="cbOnDutyOnly" Grid.Column="2"
                  Content="Тільки на зміні"
                  Grid.Row="0"
                  VerticalAlignment="Center"
                  Height="30"
                  Cursor="Hand"
                  MinWidth="140"
                  FontSize="14"
                  Margin="10,0,0,0"
                  Checked="CbOnDutyOnly_Checked"
                  Unchecked="cbOnDutyOnly_Unchecked" Foreground="White">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                <Setter Property="Background" Value="#6ebaad"/>
                                    <!-- bootstrap-primary -->
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="10"
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="Background" Value="#084298"/>
                                        <!-- Darker shade -->
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF6EAABA"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#cccccc"/>
                                            <Setter Property="Foreground" Value="Gray"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                </Grid>

                <!-- Таблиця лікарів -->
                <DataGrid x:Name="DoctorsGrid" Grid.Row="1"
                          AutoGenerateColumns="False" Margin="0"
                          CanUserAddRows="False" IsReadOnly="True" FontSize="14"
                          SelectionMode="Single" SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <!-- ПІБ -->
                        <DataGridTextColumn Header="ПІБ" Width="*" 
                                            Binding="{Binding Path=., Converter={StaticResource FullNameConverter}}" />

                        <!-- Посада -->
                        <DataGridTextColumn Header="Посада" Binding="{Binding Position}" Width="*"/>

                        <!-- Email -->
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>

                        <!-- Телефон -->
                        <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*"/>

                        <!-- Дата початку -->
                        <DataGridTextColumn Header="Дата початку" Binding="{Binding StartDate, StringFormat=dd.MM.yyyy}" Width="*"/>

                        <!-- Зміна -->
                        <DataGridTextColumn Header="Зміна" Binding="{Binding OnDutyStatus}" Width="*"/>

                        <!-- Кнопка Редагувати -->
                        <DataGridTemplateColumn Header="✎" Width="60" x:Name="colEdit" Visibility="Collapsed">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Click="BtnEdit_Click"
                                            Width="32" Height="32"
                                            Background="#0d6efd"
                                            Foreground="White"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            BorderThickness="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Cursor="Hand"
                                            Content="✎"
                                            ToolTip="Редагувати"
                                            Padding="0"
                                            Margin="5"
                                    />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Кнопка Видалити -->
                        <DataGridTemplateColumn Header="🗑" Width="60" x:Name="colDelete" Visibility="Collapsed">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Click="BtnDelete_Click"
                                            Width="32" Height="32"
                                            Background="#dc3545"
                                            Foreground="White"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            BorderThickness="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Cursor="Hand"
                                            Content="🗑"
                                            ToolTip="Видалити"
                                            Padding="0"
                                            Margin="5"
                                    />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
