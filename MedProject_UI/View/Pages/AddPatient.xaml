<Window x:Class="MedProject_UI.AddPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedProject_UI"
        xmlns:UserControls="clr-namespace:MedProject_UI.View.UserControls"
        mc:Ignorable="d"
        Title="Add Patient" Height="756" Width="1200" MinHeight="750" MinWidth="1200"  WindowStartupLocation="CenterScreen" Icon="/smallIcon.jpg" Loaded="Window_Loaded">
    <Window.Resources>


    </Window.Resources>
    <Grid x:Name="mainContainer">
        <Grid.Background>
            <ImageBrush ImageSource="/background.jpg" Stretch="UniformToFill" TileMode="Tile" Opacity="0.20" AlignmentX="Left"/>
        </Grid.Background>




        <Grid x:Name="mainGridPage1" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="0.8*"/>
            </Grid.RowDefinitions>
            <Label Content="Заповніть основні дані хворого" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2" FontSize="25">
                <Label.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF56B1A9" Offset="1"/>
                        <GradientStop Color="Transparent" Offset="0.667"/>

                    </LinearGradientBrush>
                </Label.Background>
            </Label>
            <Grid x:Name="inputItemsGrid1" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="LastNameLabel" Content="Прізвище"                          HorizontalAlignment="Right" Grid.Row="0" VerticalAlignment="Center" FontSize="25" Margin="0,0,15,0"/>
                <Label x:Name="FirstNameLabel" Content="Ім'я"                             HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" FontSize="25" Margin="0,0,15,0"/>
                <Label x:Name="MiddleNameLabel" Content="По-батькові"                     HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Center" FontSize="25" Margin="0,0,15,0"/>
                <Label x:Name="BirthdayLabel" Content="Дата народження"                   HorizontalAlignment="Right" Grid.Row="3" VerticalAlignment="Center" FontSize="25" Margin="0,0,15,0"/>
                <Label x:Name="LivingAddressLabel" Content="Адреса проживання"            HorizontalAlignment="Right" Grid.Row="4" VerticalAlignment="Center" FontSize="25" Margin="0,0,15,0"/>
                <Label x:Name="WorkDescriptorLabel" Content="Професія"                    HorizontalAlignment="Right" Grid.Row="5" VerticalAlignment="Center" FontSize="25" Margin="0,0,15,0"/>
                <Label x:Name="HospitalEntrDateLabel" Content="Дата госпіталізації"       HorizontalAlignment="Right" Grid.Row="6" VerticalAlignment="Center" FontSize="25" Margin="0,0,15,0"/>
                <Label x:Name="HospitalEndDateLabel" Content="Дата вибуття зі стаціонару" HorizontalAlignment="Right" Grid.Row="7" VerticalAlignment="Center" FontSize="25" Margin="0,0,15,0"/>


                <UserControls:ClearableSearchBar x:Name="tbLastName"         Grid.Column="1" Grid.Row="0" Margin="15,0,15,0" VerticalAlignment="Center"  MyLabel="Павленко"  Height="40"/>
                <UserControls:ClearableSearchBar x:Name="tbFirstName"        Grid.Column="1" Grid.Row="1" Margin="15,0,15,0" VerticalAlignment="Center"  MyLabel="Павел"  Height="40"/>
                <UserControls:ClearableSearchBar x:Name="tbMiddleName"       Grid.Column="1" Grid.Row="2" Margin="15,0,15,0" VerticalAlignment="Center"  MyLabel="Павлович"  Height="40"/>
                <UserControls:DatePickerTemplate x:Name="datePickerBirthday" Grid.Column="1" Grid.Row="3" Margin="15,3,15,3" FontSize="25" Height="40"/>


                <UserControls:ClearableSearchBar x:Name="tbLivingAddress"         Grid.Column="1" Grid.Row="4" Margin="15,0,15,5" VerticalAlignment="Center"  MyLabel="Сумська 7б"  Height="40"/>
                <UserControls:ClearableSearchBar x:Name="tbWorkAddress"           Grid.Column="1" Grid.Row="5" Margin="15,0,15,5" VerticalAlignment="Center"  MyLabel="Лікар"  Height="40"/>
                <UserControls:DatePickerTemplate x:Name="datePickerHospitalStart" Grid.Column="1" Margin="15,3,15,3" Grid.Row="6" FontSize="25" Height="40"/>
                <UserControls:DatePickerTemplate x:Name="datePickerHospitalEnd"   Grid.Column="1" Margin="15,3,15,3" Grid.Row="7" FontSize="25" Height="40"/>


            </Grid>
            <UserControls:btnTemplate x:Name="btnPage1Next" HorizontalAlignment="Right" Grid.Row="2" MyBtnText="Далі &gt;&gt;&gt;" Margin="0,0,30,0" />

        </Grid>




        <Grid x:Name="mainGridPage2" Visibility="Hidden">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="0.8*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Label Content="Заповніть дані щодо діагнозів" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Center"  FontSize="25">
                <Label.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF56B1A9" Offset="1"/>
                        <GradientStop Color="Transparent" Offset="0.667"/>
                    </LinearGradientBrush>
                </Label.Background>
            </Label>

            <Grid x:Name="inputItemsGrid2" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Label x:Name="ClaimsLabel" Content="Скарги" HorizontalAlignment="Right" Grid.Row="0" VerticalAlignment="Center" FontSize="25" Margin="10,0,10,0" />
                <Label x:Name="EntrDiagnosisLabel" Content="Діагноз при госпіталізації" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" FontSize="25" Margin="10,0,10,0"/>
                <Label x:Name="FinalDiagnosisLabel" Content="Заключний діагноз" HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Center" FontSize="25" Margin="10,0,10,0"/>
                <Label x:Name="ComplicationsLabel" Content="Ускладнення" HorizontalAlignment="Right" Grid.Row="3" VerticalAlignment="Center" FontSize="25" Margin="10,0,10,0"/>
                <Label x:Name="AdditionalDiagnosisLabel" Content="Супутній" HorizontalAlignment="Right" Grid.Row="4" VerticalAlignment="Center" FontSize="25" Margin="10,0,10,0"/>
                <Label x:Name="MKXLabel" Content="МКХ шифр" HorizontalAlignment="Right" Grid.Row="5" VerticalAlignment="Center" FontSize="25" Margin="19,0,10,0"/>



                <Grid Grid.Column="1" Grid.Row="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="comboBoxClaims" VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="32" FontSize="20" Margin="5,0,5,0" SelectionChanged="comboBoxClaims_SelectionChanged">
                        <ComboBoxItem FontSize="23" Content="Кашель з слизовою, гнійною мокротою, сухий" />
                        <ComboBoxItem FontSize="23" Content="Кровохаркання" />
                        <ComboBoxItem FontSize="23" Content="Задишку при фізичному навантаженні, розмові, в спокої" />
                        <ComboBoxItem FontSize="23" Content="Біль у грудній клітці справа, зліва, за грудиною" />
                        <ComboBoxItem FontSize="23" Content="Гіпертермію до °С" />
                        <ComboBoxItem FontSize="23" Content="Субфебрилітет вечорами" />
                        <ComboBoxItem FontSize="23" Content="Осиплість голосу" />
                        <ComboBoxItem FontSize="23" Content="Набряк обличчя" />
                        <ComboBoxItem FontSize="23" Content="Утруднення проходження їжі по стравоходу" />
                        <ComboBoxItem FontSize="23" Content="Загальна слабкість" />
                        <ComboBoxItem FontSize="23" Content="Зниження апетиту" />
                    </ComboBox>
                    <Border x:Name="borderClaims" Grid.Column="1" Grid.Row="1" Margin="5,5,10,5" CornerRadius="5" BorderBrush="#AAAAAA" BorderThickness="1.5" ClipToBounds="True" Padding="2,2,2,2" Background="#F0F0F0">
                        <TextBox x:Name="tbClaims" TextWrapping="Wrap" FontSize="20"  VerticalScrollBarVisibility="Visible" BorderThickness="0" Background="#F0F0F0" PreviewTextInput="tbClaims_PreviewTextInput"/>
                    </Border>
                </Grid>

                <Border Grid.Column="1" Grid.Row="1" Margin="5,5,10,5" CornerRadius="5" BorderBrush="#AAAAAA" BorderThickness="1.5" ClipToBounds="True" Padding="2,2,2,2" Background="#F0F0F0">
                    <TextBox x:Name="tbEntrDiagnosis" TextWrapping="Wrap" FontSize="20" VerticalScrollBarVisibility="Visible" BorderThickness="0" Background="#F0F0F0" PreviewTextInput="tbEntrDiagnosis_PreviewTextInput"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="2" Margin="5,5,10,5" CornerRadius="5" BorderBrush="#AAAAAA" BorderThickness="1.5" ClipToBounds="True" Padding="2,2,2,2" Background="#F0F0F0">
                    <TextBox x:Name="tbFinalDiagnosis" TextWrapping="Wrap" FontSize="20" VerticalScrollBarVisibility="Visible" BorderThickness="0" Background="#F0F0F0" PreviewTextInput="tbFinalDiagnosis_PreviewTextInput"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="3" Margin="5,5,10,5" CornerRadius="5" BorderBrush="#AAAAAA" BorderThickness="1.5" ClipToBounds="True" Padding="2,2,2,2" Background="#F0F0F0">
                    <TextBox x:Name="tbComplications" TextWrapping="Wrap" FontSize="20" VerticalScrollBarVisibility="Visible" BorderThickness="0" Background="#F0F0F0" PreviewTextInput="tbComplications_PreviewTextInput"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="4" Margin="5,5,10,5" CornerRadius="5" BorderBrush="#AAAAAA" BorderThickness="1.5" ClipToBounds="True" Padding="2,2,2,2" Background="#F0F0F0">
                    <TextBox x:Name="tbAdditionDiagnosis" TextWrapping="Wrap" FontSize="20" VerticalScrollBarVisibility="Visible" BorderThickness="0" Background="#F0F0F0" PreviewTextInput="tbAdditionDiagnosis_PreviewTextInput"/>
                </Border>

                <UserControls:ClearableSearchBar x:Name="tbMKX" Grid.Column="1" Grid.Row="5" Margin="5,0,10,0" MyLabel="МКХ шифр" FontSize="20" VerticalAlignment="Center" Height="40"/>




            </Grid>

            <UserControls:btnTemplate x:Name="btnPage2Back" HorizontalAlignment="Left" Grid.Row="2" MyBtnText="&lt;&lt;&lt; Повернутись" Margin="30,0,0,0" />
            <UserControls:btnTemplate x:Name="btnPage2Next" HorizontalAlignment="Right" Grid.Row="2" MyBtnText="Далі &gt;&gt;&gt;" Margin="0,0,30,0" />
        </Grid>




        <Grid x:Name="mainGridPage3" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="0.8*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Заповніть дані" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2" FontSize="25">
                <Label.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF56B1A9" Offset="1"/>
                        <GradientStop Color="Transparent" Offset="0.667"/>

                    </LinearGradientBrush>
                </Label.Background>
            </Label>


            <Grid x:Name="inputItemsGrid3" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>



                <Label x:Name="OperationNameLabel" Content="Назва операції"     HorizontalAlignment="Right" Grid.Row="0" VerticalAlignment="Center" FontSize="25" Margin="10,0,10,0" />
                <Label x:Name="OperationDateLabel" Content="Дата операції"      HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" FontSize="25" Margin="10,0,10,0"/>
                <Label x:Name="ChemotherapyNameLabel" Content="Схема ПХТ"       HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Center" FontSize="25" Margin="10,0,10,0" />
                <Label x:Name="ChemotherapyDateLabel" Content="Дата ЛТ / ПХТ"   HorizontalAlignment="Right" Grid.Row="3" VerticalAlignment="Center" FontSize="25" Margin="10,0,10,0"/>
                <Label x:Name="HistologyLabel" Content="Гістологія/цитологія"   HorizontalAlignment="Right" Grid.Row="4" VerticalAlignment="Center" FontSize="25" Margin="10,0,10,0" />
                <Label x:Name="DoctorLabel" Content="Лікуючий лікар"            HorizontalAlignment="Right" Grid.Row="5" VerticalAlignment="Center" FontSize="25" Margin="10,0,10,0"/>
                <Label x:Name="DepartmentHeadLabel" Content="Завідувач відділення" HorizontalAlignment="Right" Grid.Row="6" VerticalAlignment="Center" FontSize="25" Margin="10,0,10,0" />
                <Label x:Name="DepartHeadAssistantLabel" Content="В.о. зав. відділення" HorizontalAlignment="Right" Grid.Row="7" VerticalAlignment="Center" FontSize="25" Margin="10,0,10,0"/>



                <UserControls:ClearableSearchBar x:Name="tbOperationName"       Grid.Column="1" Grid.Row="0" Margin="5,5,10,5" VerticalAlignment="Center"  MyLabel=""  Height="40"/>
                <UserControls:DatePickerTemplate x:Name="dateOperation"         Grid.Column="1" Margin="5,3,10,3" Grid.Row="1" FontSize="25" Height="40"/>
                <UserControls:ClearableSearchBar x:Name="tbChemotherapyName"    Grid.Column="1" Grid.Row="2" Margin="5,5,10,5" VerticalAlignment="Center"  MyLabel=""  Height="40"/>
                <UserControls:DatePickerTemplate x:Name="dateChemotherapy"      Grid.Column="1" Margin="5,3,10,3" Grid.Row="3" FontSize="25" Height="40"/>
                <UserControls:ClearableSearchBar x:Name="tbHistology"           Grid.Column="1" Grid.Row="4" Margin="5,5,10,5" VerticalAlignment="Center"  MyLabel=""  Height="40"/>

                <ComboBox x:Name="comboBoxDoctorName" 
                          Grid.Column="1" Grid.Row="5" 
                          Width="400" Height="40" 
                          HorizontalAlignment="Left" 
                          VerticalAlignment="Center" 
                          FontSize="25" 
                          Margin="5,0,10,0" 
                          IsEditable="False"/>

                <ComboBox x:Name="cbDepartmentHead"
                          Grid.Column="1" Grid.Row="6"
                          Width="400" Height="40"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          FontSize="25" FontFamily="Roboto"
                          Margin="5,0,5,0"
                          IsEditable="False"/>

                <Border Grid.Column="1" Grid.Row="7" HorizontalAlignment="Left" Margin="5,0,5,0" Height="40" Width="400" CornerRadius="5" BorderBrush="#AAAAAA" BorderThickness="1.5"  ClipToBounds="True" Padding="2,2,2,2" Background="#F0F0F0">
                    <TextBox x:Name="tbDepartHeadAssistant" VerticalAlignment="Center"  FontSize="25" FontFamily="Roboto" Background="#F0F0F0" BorderBrush="{x:Null}" PreviewTextInput="tbDepartHeadAssistant_PreviewTextInput"/>
                </Border>


            </Grid>


            <UserControls:btnTemplate x:Name="btnPage3Back" HorizontalAlignment="Left" Grid.Row="2" MyBtnText="&lt;&lt;&lt; Повернутись" Margin="30,0,0,0" />
            <UserControls:btnTemplate x:Name="btnPage3Next" HorizontalAlignment="Right" Grid.Row="2" MyBtnText="Далі &gt;&gt;&gt;" Margin="0,0,30,0" />



        </Grid>



        <Grid x:Name="mainGridPage4" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="0.8*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Заповніть об'єктивний статус" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2" FontSize="25">
                <Label.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF56B1A9" Offset="1"/>
                        <GradientStop Color="Transparent" Offset="0.667"/>

                    </LinearGradientBrush>
                </Label.Background>
            </Label>


            <Grid x:Name="inputItemsGrid4" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="0.05*"/>
                    <RowDefinition/>
                    <RowDefinition Height="0.05*"/>
                    <RowDefinition/>
                    <RowDefinition Height="0.05*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.05*"/>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.1*"/>
                </Grid.ColumnDefinitions>

                <Label x:Name="OverallItem1Label" Content="Загальний стан" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" FontSize="20" Margin="10,0,20,0" />
                <Label x:Name="OverallItem2Label" Content="Коституція" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" FontSize="20" Margin="10,0,20,0" />
                <Label x:Name="OverallItem3Label" Content="Харчування" HorizontalAlignment="Right" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" FontSize="20" Margin="10,0,20,0" />
                <Label x:Name="OverallItem4Label" Content="Задишка" HorizontalAlignment="Right" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" FontSize="20" Margin="10,0,20,0" />

                <GridSplitter Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="4"  HorizontalAlignment="Stretch" Background="#FF56B1A9" Height="1" Margin="30,0,30,0"  VerticalAlignment="Center" IsEnabled="False"/>
                <GridSplitter Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"  HorizontalAlignment="Stretch" Background="#FF56B1A9" Height="1" Margin="30,0,30,0"  VerticalAlignment="Center" IsEnabled="False"/>

                <GridSplitter Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="4"  HorizontalAlignment="Stretch" Background="#FF56B1A9" Height="1" Margin="30,0,30,0"  VerticalAlignment="Center" IsEnabled="False"/>
                <GridSplitter Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4"  HorizontalAlignment="Stretch" Background="#FF56B1A9" Height="1" Margin="30,0,30,0"  VerticalAlignment="Center" IsEnabled="False"/>

                <GridSplitter Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="4"  HorizontalAlignment="Stretch" Background="#FF56B1A9" Height="1" Margin="30,0,30,0"  VerticalAlignment="Center" IsEnabled="False"/>
                <GridSplitter Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4"  HorizontalAlignment="Stretch" Background="#FF56B1A9" Height="1" Margin="30,0,30,0"  VerticalAlignment="Center" IsEnabled="False"/>


                <Label x:Name="OverallItem5Label" Content="Шкіра" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" FontSize="20" Margin="10,0,20,0" />
                <Label x:Name="OverallItem6Label" Content="Язик" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="4" VerticalAlignment="Center" FontSize="20" Margin="10,0,20,0" />
                <Label x:Name="OverallItem7Label" Content="Печінка" HorizontalAlignment="Right" Grid.Row="4" Grid.Column="4" VerticalAlignment="Center" FontSize="20" Margin="10,0,20,0" />
                <Label x:Name="OverallItem8Label" Content="Стілець" HorizontalAlignment="Right" Grid.Row="6" Grid.Column="4" VerticalAlignment="Center" FontSize="20" Margin="10,0,20,0" />

                <GridSplitter Grid.Column="3" Grid.RowSpan="7" HorizontalAlignment="Center" Background="#FF56B1A9" Height="470" Margin="0,0,0,0"  VerticalAlignment="Center" Width="1" IsEnabled="False"/>




                <Grid x:Name="containerOverallItem1" Grid.Row="0" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <RadioButton Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" FontFamily="Roboto" FontSize="18" GroupName="rbOverallItem1" IsChecked="True">Задовільний</RadioButton>
                    <RadioButton Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" FontFamily="Roboto" FontSize="18" GroupName="rbOverallItem1">Відносно задовільний</RadioButton>
                    <RadioButton Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" FontFamily="Roboto" FontSize="18" GroupName="rbOverallItem1">Середньої важкості</RadioButton>
                    <RadioButton Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" FontFamily="Roboto" FontSize="18" GroupName="rbOverallItem1">Важкий</RadioButton>
                </Grid>


                <Grid x:Name="containerOverallItem2" Grid.Row="2" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.3*"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="0.3*"/>
                    </Grid.RowDefinitions>
                    <RadioButton Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" FontFamily="Roboto" FontSize="18" GroupName="rbOverallItem2" IsChecked="True">Нормостенік</RadioButton>
                    <RadioButton Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" FontFamily="Roboto" FontSize="18" GroupName="rbOverallItem2">Астенік</RadioButton>
                    <RadioButton Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" FontFamily="Roboto" FontSize="18" GroupName="rbOverallItem2">Гиперстенік</RadioButton>
                </Grid>


                <Grid x:Name="containerOverallItem3" Grid.Row="4" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <RadioButton Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" FontFamily="Roboto" FontSize="18" GroupName="rbOverallItem3" IsChecked="True">Підвищене</RadioButton>
                    <RadioButton Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" FontFamily="Roboto" FontSize="18" GroupName="rbOverallItem3">Помірне</RadioButton>
                    <RadioButton Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" FontFamily="Roboto" FontSize="18" GroupName="rbOverallItem3">Знижене</RadioButton>
                    <RadioButton Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" FontFamily="Roboto" FontSize="18" GroupName="rbOverallItem3">Кахексія</RadioButton>
                </Grid>


                <Grid x:Name="containerOverallItem4" Grid.Row="6" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <RadioButton Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" FontFamily="Roboto" FontSize="18" GroupName="rbOverallItem4" IsChecked="True">Немає</RadioButton>
                    <RadioButton Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" FontFamily="Roboto" FontSize="18" GroupName="rbOverallItem4">При фізичному навантаженні</RadioButton>
                    <RadioButton Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" FontFamily="Roboto" FontSize="18" GroupName="rbOverallItem4">При розмові</RadioButton>
                    <RadioButton Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" FontFamily="Roboto" FontSize="18" GroupName="rbOverallItem4">В спокої</RadioButton>
                </Grid>





                <Grid x:Name="containerOverallItem5" Grid.Row="0" Grid.Column="5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
